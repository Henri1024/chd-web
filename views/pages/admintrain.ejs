<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <script type="text/javascript" src="/js/jquery.csvToTable.js"></script>

  <script>
    $(function () {
      loadCsvToTable('');
    });

    $(document).ready(function () {
      $('#checkbox-display-csv').change(function () {
        if ($('#checkbox-display-csv').is(':checked')) {
          $('#csv-table').show();
        } else {
          $('#csv-table').hide();
        }
      });

      $('#checkbox-use-provided-dataset').change(function () {
        if ($('#checkbox-use-provided-dataset').is(':checked')) {
          loadCsvToTable('/csv/sample.csv');

          $('#user-csv-input').val(null);

        }
      });

      // listener for id user-csv-input user input file
      $('#user-csv-input').change(function () {
        // get the file name
        var fileName = $(this).val();
        // replace the "Choose a file" label
        $(this).next('.form-check-label').html(fileName);
        // load the csv file to the table

        // upload the csv file to the server
        var formData = new FormData();
        formData.append('file', this.files[0]);
        $.ajax({
          url: '/admin/uploadcsv',
          type: 'POST',
          data: formData,
          processData: false,
          contentType: false,
          success: function (data) {
            loadCsvToTable('/csv/tmp.csv');
            $('#checkbox-use-provided-dataset').prop('checked', false);

            $.ajax({
              url: 'http://localhost:9999/tmp/upload',
              type: 'POST',
              data: formData,
              processData: false,
              contentType: false,
              success: function (data) {
                alert('sukses melakukan upload CSV ');
              },
              fail: function (data) {
                alert('gagal melakukan upload CSV ');
              }
            });


          },
          fail: function (data) {
            alert('gagal melakukan update CSV');
          }
        });

        // loadCsvToTable(fileName);
      });


      $('#main-prediction-form').submit(function (e) {

        e.preventDefault();
        var body = {
          epochs: $('#form-epoch').val(),
          split_rate: $('#form-split-rate').val(),
          random_state: 128,
          batch_size: 32
        }
        $.ajax({
          url: '/admin/train',
          type: 'POST',
          data: JSON.stringify(body),
          dataType: "json",
          contentType: 'application/json',
          encode: true,
          success: function (data) {
            alert('Sukses melakukan training dengan jumlah epoch : ' + body.epochs + ' dan split rate: ' + body.split_rate + ' dengan hasil : ' + JSON.stringify(data));
          },
          fail: function (data) {
            alert('Gagal Melakukan training dengan data yang disediakan');
          }
        });
      });

    });

    function loadCsvToTable(source) {
      if (source == '') {
        $('#csv-table').CSVToTable('/csv/sample.csv');
      } else {
        $('#csv-table').CSVToTable(source);
      }
    }

  </script>

  <header>
    <%- include('../partials/header_admin'); %>
  </header>


  <main>

    <div class="container">
      <h4 class="pt-3 text-center pb-2 font-weight-bold">Lakukan Pelatihan Dengan Dataset Anda</h4>

      <form id="main-prediction-form">

        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="checkbox-use-provided-dataset" checked>
          <label class="form-check-label" for="checkbox-use-provided-dataset">
            Gunakan Dataset Yang Disediakan
          </label>
        </div>

        <div class="form-group mt-3">
          <label for="user-csv-input">Masukan CSV anda</label>
          <input type="file" class="form-control-file" id="user-csv-input">
        </div>

        <div class="form-group">
          <label for="form-epoch" class="col-sm-4 font-weight-bold">Epochs (Maksimal 30 epoch) : </label>
          <input name="form-epoch" type="number" class="form-control col-sm-7 mx-3" id="form-epoch"
            placeholder="masukan jumlah epoch yang diinginkan" required>
        </div>

        <div class="form-group">
          <label for="form-split-rate" class="col-sm-4 font-weight-bold">Split Validation Ratio : </label>
          <input name="form-split-rate" step="0.01" type="number" class="form-control col-sm-7 mx-3"
            id="form-split-rate" placeholder="masukan nilai split ratio yang diinginkan" required>
        </div>

        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="checkbox-display-csv" checked>
          <label class="form-check-label" for="checkbox-display-csv">
            Tampilkan CSV
          </label>
        </div>

        <div class="form-group text-center m-3">
          <button type="submit" class="btn btn-submit btn-primary ml-5 px-4">Submit</button>
        </div>
      </form>
    </div>

    <div class="text-center">

      <div id="csv-table"></div>

    </div>

  </main>




  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>